<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Movie Gallery (Dark)</title>

    <!-- CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"> <!-- Bootstrap -->
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">üé¨ MovieApp</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="/reviews">All Reviews</a>
                    </li>
                </ul>
                </div>
            </div>
        </nav>

    </header>

    <main class="container py-5">
       

        <!-- Search Bar -->
        <section class="mb-4">
        <input 
            type="text" 
            id="searchInput" 
            class="form-control form-control-lg bg-dark text-white border-secondary" 
            placeholder="Search movies by title..."
        />
        </section>

        <!-- Movie Cards Grid -->
        <section id="movieGrid" class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        <% movies.forEach(movie => { %>
            <div class="col text-center movie-card" data-title="<%= movie.title.toLowerCase() %>">
            <div class="card h-100">

                <div class="card-img-container position-relative">
                    <img src="<%= movie.poster %>" class="card-img-top" alt="<%= movie.title %>">

                    <div class="button-overlay d-flex flex-column align-items-center">
                        <a href="/reviews" class="btn btn-warning mb-2">
                            Read Reviews
                        </a>
                        <a href="/review/<%= movie.id %>" class="btn btn-outline-light">
                            Submit Review
                        </a>
                    </div>
                </div>


                <div class="card-body">
                <h5 class="card-title"><%= movie.title %></h5>
                <p class="card-text">Year: <%= movie.year %></p>
                <p class="card-text text-warning">‚≠ê <%= movie.rating %>/10</p>
                </div>
            </div>
            </div>
        <% }) %>
        </section>

        <!-- Back to Top Button -->
        <button id="backToTopBtn" class="btn btn-warning position-fixed" aria-label="Back to top">
        ‚¨Ü
        </button>

    </main>

    <!-- Script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/script.js"></script>

</body>
</html>