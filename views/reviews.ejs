<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>All Reviews</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bg-dark text-white">
    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">üé¨ MovieApp</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="/reviews">All Reviews</a>
                    </li>
                </ul>
                </div>
            </div>
        </nav>

    </header>

    <div class="container py-5">
        <a href="/" class="btn btn-secondary mb-4">‚Üê Back to Home</a>
        <h1 class="mb-4 text-center">üìù All Reviews</h1>

        <% if (submitted === 'true') { %>
            <div class="alert alert-success text-center alert-dismissible fade show" role="alert">
            ‚úÖ Your review has been submitted!
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>

        <% if (reviews.length === 0) { %>
            <p class="text-muted text-center">No reviews available yet.</p>
        <% } else { %>
            <div id="reviewList" class="row row-cols-1 g-4">
            <% reviews.forEach(review => { 
                const movie = movies.find(m => m.id === review.movieId); 
            %>
                <div class="col">
                <div class="card h-100 text-light">
                    <div class="card-body">
                    <h5 class="card-title">
                        üé¨ <%= movie.title %> (<%= movie.year %>)
                    </h5>
                    <p class="card-subtitle mb-2 text-light">
                        <strong><%= review.name %></strong> rated it ‚≠ê <%= review.rating %>/5
                    </p>
                    <p class="card-text"><%= review.comment %></p>
                    </div>
                </div>
                </div>
            <% }) %>
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/script.js"></script>
</body>
</html>